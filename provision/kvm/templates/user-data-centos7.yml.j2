#cloud-config
packages:
  - python
  - nfs-utils
  - python-pip
package_update: true
package_upgrade: true
package_reboot_if_required: true
disable_root: true
users:
  - default
system_info:
  distro: centos
  default_user:
    name: {{ ssh_user }}
    passwd: {{ ssh_pass }}
    groups: sudo,admin
    lock_passwd: false
    system: false
    shell: /bin/bash
    sudo: ALL=(ALL) NOPASSWD:ALL
    ssh_authorized_keys:
      - {{ ssh_key }}
{% if (yum_mirror is defined) or (epel_mirror is defined) %}
write_files:
{% endif %}
{% if yum_mirror is defined %}
  - path: /etc/yum.repos.d/CentOS-Base.repo
    owner: root:root
    permissions: '0444'
    content: |
      # installed by cloud-init
      [base]
      name=CentOS-$releasever - Base
      baseurl=http://{{ yum_mirror }}/centos/$releasever/os/$basearch/
      gpgcheck=1
      gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-CentOS-7
      #released updates 
      [updates]
      name=CentOS-$releasever - Updates
      baseurl=http://{{ yum_mirror }}/centos/$releasever/updates/$basearch/
      gpgcheck=1
      gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-CentOS-7
      #additional packages that may be useful
      [extras]
      name=CentOS-$releasever - Extras
      baseurl=http://{{ yum_mirror }}/centos/$releasever/extras/$basearch/
      gpgcheck=1
      gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-CentOS-7
{% endif %}
{% if epel_mirror is defined %}
yum_repos:
    # The name of the repository
    epel:
        baseurl: http://{{ epel_mirror }}/pub/epel/$releasever/$basearch
        enabled: true
        failovermethod: priority
        gpgcheck: true
        gpgkey: file:///etc/pki/rpm-gpg/RPM-GPG-KEY-EPEL
        name: Extra Packages for Enterprise Linux
{% endif %}
runcmd:
  - rm -f /etc/sysconfig/network-scripts/ifcfg-eth0
power_state:
  mode: reboot
