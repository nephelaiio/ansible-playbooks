version: 2
ethernets:
  {{ iface['name'] }}:
    match:
      mac_address: "{{ iface['hw-address'] }}"
    set-name: {{ iface['name'] }}
{% if iface['method'] == 'static' %}
    addresses:
      - {{ iface['ip-address'] }}/{{ iface['prefix'] }}
    gateway4: {{ iface['gateway'] }}
{% else %}
    dhcp4: true
{% endif %}
 
